# Application
APP_NAME=InsureGraph Pro
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=change-me-to-a-random-secret-key-in-production

# API
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3030,http://localhost:8000

# Database - PostgreSQL (GCP Cloud SQL)
# GCP Instance: postgresql-479201
POSTGRES_HOST=localhost  # Use 'localhost' with Cloud SQL Proxy, or the instance's public IP
POSTGRES_PORT=5432
POSTGRES_DB=epdl
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-in-production
# Cloud SQL Instance Connection Name (format: project-id:region:instance-name)
CLOUD_SQL_CONNECTION_NAME=insuregraph-dev:asia-northeast3:postgresql-479201

# Database - Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-me-in-production

# Cache - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cloud Storage - GCP
GCP_PROJECT_ID=insuregraph-dev
GCS_BUCKET_POLICIES=insuregraph-policies-dev
GCS_BUCKET_REPORTS=insuregraph-reports-dev
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Cloud KMS
KMS_KEY_NAME=projects/PROJECT_ID/locations/asia-northeast3/keyRings/insuregraph-keyring/cryptoKeys/pii-encryption-key

# LLM APIs
UPSTAGE_API_KEY=your-upstage-api-key
OPENAI_API_KEY=your-openai-api-key

# JWT
JWT_SECRET_KEY=change-me-to-another-random-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=1

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL=INFO

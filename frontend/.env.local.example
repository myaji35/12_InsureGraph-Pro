# ==============================================
# InsureGraph Pro - Frontend Environment Variables
# ==============================================

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_API_TIMEOUT=30000

# Environment
NEXT_PUBLIC_ENVIRONMENT=development
NODE_ENV=development

# Security
# Note: Access tokens are stored in localStorage, refresh tokens in httpOnly cookies (backend)
NEXT_PUBLIC_TOKEN_STORAGE=localStorage

# Clerk Authentication
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here

# Clerk URLs (customize these to match your app routes)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# File Upload Settings
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=application/pdf
NEXT_PUBLIC_MAX_DOCUMENTS_PER_QUERY=10

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Monitoring & Analytics (Optional)
# Uncomment and configure when ready for production

# Sentry Error Tracking
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_AUTH_TOKEN=
# SENTRY_ORG=
# SENTRY_PROJECT=

# Google Analytics
# NEXT_PUBLIC_GA_ID=

# Application Settings
NEXT_PUBLIC_APP_NAME=InsureGraph Pro
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_DEFAULT_LOCALE=ko
NEXT_PUBLIC_SUPPORTED_LOCALES=ko,en

# Rate Limiting (Client-side hints)
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=60000

# Cache Settings
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false
